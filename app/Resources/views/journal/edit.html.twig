{% extends 'base.html.twig' %}

{% block body %}
    <div class="pages_maincontent">
        <h2 class="page_title">Modification du journal</h2>
        <div class="page_single layout_fullwidth_padding">
            <div class="contactform">
                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <div>
                    <label for="dateEvent" class="required">Date</label>
                    <input type="date" name="dateEvent" required="required" value="{{ journal.dateEvent }}" class="form_input" placeholder="Le type du programme" autocomplete="off" />
                </div>
                <div>
                    <label for="debut" class="required">Heure debut</label>
                    <input type="time" name="debut" required="required" value="{{ journal.debut }}" class="form_input" placeholder="Le type du programme" autocomplete="off" />
                </div>
                <div>
                    <label for="fin" class="required">Heure fin</label>
                    <input type="time" name="fin" required="required" value="{{ journal.fin }}" class="form_input" placeholder="Le type du programme" autocomplete="off" />
                </div>

                <input type="submit" class="form_submit" value="Modifier" />
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

{% endblock %}
