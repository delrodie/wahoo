{% extends 'base.html.twig' %}

{% block body %}
    <h1>Participant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ participant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Prenoms</th>
                <td>{{ participant.prenoms }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ participant.sexe }}</td>
            </tr>
            <tr>
                <th>Naissance</th>
                <td>{{ participant.naissance }}</td>
            </tr>
            <tr>
                <th>Cel</th>
                <td>{{ participant.cel }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ participant.code }}</td>
            </tr>
            <tr>
                <th>Invisible</th>
                <td>{{ participant.invisible }}</td>
            </tr>
            <tr>
                <th>Flag</th>
                <td>{{ participant.flag }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('participant_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
